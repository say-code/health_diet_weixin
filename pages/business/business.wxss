/* pages/business/business.wxss */
.pit {
  width: 100%;
}

.pit-panel {
  height: 280rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.float-box {
  height: 280rpx;
  box-shadow: 0rpx 8rpx 7rpx rgb(238, 238, 238);
  background-color: white;
  border-radius: 15rpx;
  width: 90%;
  margin: auto;
  position: relative;
  top: -150rpx;
  box-sizing: border-box;
  padding-left: 25rpx;
  padding-top: 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}

.tittle {
  font-size: 38rpx;
  font-weight: 600;
  display: block;
}

.tittle-ent {
  font-size: 24rpx;
}

.img {
  width: 100%;
  height: 100%;
}

.enhance {
  color: rgb(184, 183, 183);
  height: 75rpx;
}

page {
  background-color: #fff;
}

page .round-image {
  border-radius: 12rpx;
}

.side-bar-wrapper {
  display: flex;
  height: 60vh;
  overflow: hidden;
  position: relative;
  top: -110rpx;
}

.side-bar-wrapper .content {
  flex: 1;
  transition: transform 0.3s ease;
}

.side-bar-wrapper .section {
  padding: 32rpx 0;
  box-sizing: border-box;
  height: 100%;
}

.side-bar-wrapper .title {
  padding-left: 40rpx;
  margin-bottom: 8rpx;
}

.side-bar-wrapper .image {
  width: 96rpx;
  height: 96rpx;
  border: 2rpx solid #e7e7e7;
}

.t-side-bar-wrapper {
  border-radius: 0rpx 10rpx 10rpx 0rpx;
}

.external-class {
  width: 208rpx;
}

.flow-foot {
  display: flex;
  justify-content: space-evenly;
  width: 100%;
  padding: 15rpx 5rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0rpx;

}

.flow-foot-text {
  text-align: left;
  width: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.flow-foot-text-price {
  font-size: large;
  font-weight: 600;
}

.flow-foot-text-warm {
  color: #8d8d8d;
  font-size: small;
}

.buy-button {
  margin: 0rpx;
  width: 180rpx;
  border-radius: 45rpx;

}

